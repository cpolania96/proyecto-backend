<div class="data-table">
    <h2>Listado de productos</h2>
    <% if(productos.length> 0) { %>
        <div class="contenedor-tabla">
            <table>
                <tr class="titles">
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                </tr>
                <% for (const producto of productos) { %>
                    <tr>
                        <td>
                            <%=producto.title%>
                        </td>
                        <td>
                            <%=producto.price%>
                        </td>
                        <td>
                            <%=producto.thumbnail%>
                        </td>
                    </tr>
                    <% } %>
            </table>
        </div>
        <% } else { %>
            <h1 id="alert">No se encontraron productos</h1>

            <% } %>
</div>